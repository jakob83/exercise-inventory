<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>exercise inventory</title>
  <link rel="stylesheet" href="/index.css" />
</head>
<body>
  <div class="header-ex header-eq">
    <a href="/">
      <svg
        width="70px"
        height="70px"
        viewBox="0 0 24 24"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
        <g
          id="SVGRepo_tracerCarrier"
          stroke-linecap="round"
          stroke-linejoin="round"
        ></g>
        <g id="SVGRepo_iconCarrier">
          <path
            d="M4 10L3.29289 10.7071L2.58579 10L3.29289 9.29289L4 10ZM21 18C21 18.5523 20.5523 19 20 19C19.4477 19 19 18.5523 19 18L21 18ZM8.29289 15.7071L3.29289 10.7071L4.70711 9.29289L9.70711 14.2929L8.29289 15.7071ZM3.29289 9.29289L8.29289 4.29289L9.70711 5.70711L4.70711 10.7071L3.29289 9.29289ZM4 9L14 9L14 11L4 11L4 9ZM21 16L21 18L19 18L19 16L21 16ZM14 9C17.866 9 21 12.134 21 16L19 16C19 13.2386 16.7614 11 14 11L14 9Z"
            fill="#c8d2db"
          ></path>
        </g>
      </svg>
    </a>
    <h1>Exercises</h1>
    <a href="exercises/new">
      <svg
        width="70px"
        height="70px"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
        fill="#c8d2db"
      >
        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
        <g
          id="SVGRepo_tracerCarrier"
          stroke-linecap="round"
          stroke-linejoin="round"
        ></g>
        <g id="SVGRepo_iconCarrier">
          <title></title>
          <g id="Complete">
            <g id="add-square">
              <g>
                <rect
                  data-name="--Rectangle"
                  fill="none"
                  height="20"
                  id="_--Rectangle"
                  rx="2"
                  ry="2"
                  stroke="#c8d2db"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  width="20"
                  x="2"
                  y="2"
                ></rect>
                <line
                  fill="none"
                  stroke="#c8d2db"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  x1="15.5"
                  x2="8.5"
                  y1="12"
                  y2="12"
                ></line>
                <line
                  fill="none"
                  stroke="#c8d2db"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  x1="12"
                  x2="12"
                  y1="15.5"
                  y2="8.5"
                ></line>
              </g>
            </g>
          </g>
        </g>
      </svg>
    </a>
  </div>
  <div class="exercices">
    <% if (locals.exercises) {%> <% exercises.forEach(exercise => { %>
    <div class="exercise-container" data-id="<%= exercise.id %>">
      <h3><%= exercise.exercise %></h3>
      <img src="<%= exercise.img %>" class="img" alt="exercise" />
      <p>Category: <%= exercise.category %></p>
      <%- include("../partials/equipmentList", {exercise: exercise}) %>
    </div>
    <% }); %> <% } %>
  </div>
  <script>
    const exerciseContainers = Array.from(document.querySelectorAll(".exercise-container"));
    exerciseContainers.forEach((element) => {
        element.addEventListener("click", () => {
            window.location.href +=  "/" + element.getAttribute('data-id');  // or any other URL or route
        })
    });
  </script>
</body>
